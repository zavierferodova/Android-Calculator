<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_value">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_radius</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:animateOnClick">true</item>
        <item name="backgroundTint">@color/buttonValue</item>
    </style>

    <style name="btn_operand" parent="btn_value">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="btn_operand_danger" parent="btn_value">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/buttonOperandDanger</item>
    </style>
</resources>